! Xft Font configuration
!Xft.antialias: 1
!Xft.hinting: 1
!Xft.autohint: true
Xft.hintstyle: hintslight
!hintfull
Xft.dpi: 110
Xft.rgba: rgb

! Colors
!This is a nice color too: #282722, but the one below matches molokai :D
!Rxvt.background: #121212
Rxvt.background: #0d0d0d
!Rxvt.background: #242420
Rxvt.foreground: #d0d0d0

URxvt.color4: #4183c4
URxvt.color12: #4183c4

! Cursor blinking
*blinkRate: 0
URxvt.cursorBlink: 1

! Make sure urgents get passed up
URxvt.urgentOnBell: True

! Transparancy
!URxvt.transparent: True
!URxvt.shading: 14

! Font settings
!:antialias=true:hinting=true
URxvt.font: xft:droid sans mono:size=9.25
!URxvt.font: xft:DejaVuSansMono:pixelsize=14
!URxvt.font: xft:liberation mono:size=10
!URxvt.font: xft:dejavu sans mono:size=9.5
!URxvt.font: xft:roboto mono:size=8.5
URxvt.letterSpace: -1
URxvt.lineSpace: 1

! Scrollbar settings
Rxvt.scrollBar: False
Rxvt.thickness: 0
Rxvt.troughColor: black
Rxvt.scrollBar_floating: True
Rxvt.scrollBar_right: True

! Clickable urls
URxvt.perl-ext-common: default,matcher,resize-font
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline

! Resizeable font
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.resize-font.reset: C-equal

! rofi customizations
rofi.hide-scrollbar: True
rofi.lines: 6
rofi.font: Droid Sans 12
rofi.separator-style: solid
rofi.padding: 3
rofi.location: 2
rofi.yoffset: 100
rofi.opacity: 90

!rofi.hlbg: #6EA2E6
!rofi.bg: #242420
!rofi.fg: #f1f1f1
!rofi.bw: 1
!rofi.bc: #777777


! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
!rofi.color-enabled: true
!rofi.color-window: #393939, #393939, #268bd2
!rofi.color-normal: #393939, #ffffff, #393939, #268bd2, #ffffff
!rofi.color-active: #393939, #268bd2, #393939, #268bd2, #205171
!rofi.color-urgent: #393939, #f3843d, #393939, #268bd2, #ffc39c

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #273238, #273238, #1e2529
rofi.color-normal: #273238, #c1c1c1, #273238, #394249, #ffffff
rofi.color-active: #273238, #80cbc4, #273238, #394249, #80cbc4
rofi.color-urgent: #273238, #ff1844, #273238, #394249, #ff1844
